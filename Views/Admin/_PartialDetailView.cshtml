@model Frisk_2._0.Models.SignUp
<div class="modal fade" id="edetailUser-@Model.Id" aria-labelledby="detailUserLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="editUserLabel">Detaljer</h3>
                <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Details" method="post">
                    <input type="hidden" asp-for="Id" />
                    <select name="UserType">

                        <option value="user">Privatperson</option>
                        <option value="sponsor">Sponsor</option>
                        <option value="admin">Admin</option>
                    </select>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="FirstName" class="control-label">Förnamn</label>
                        <input asp-for="FirstName" class="form-control" placeholder="Ange förnamn" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName" class="control-label">Efternamn</label>
                        <input asp-for="LastName" class="form-control" placeholder="Ange efternamn" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label">Email</label>
                        <input asp-for="Email" class="form-control" placeholder="Ange email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label">Lösenord</label>
                        <input asp-for="Password" class="form-control" placeholder="Ange lösenord" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="modal-footer">
                        <button id="btn-back" type="button" class="btn btn-secondary" data-dismiss="modal">Stäng</button>
                        <button id="btn-save" type="submit" class="btn btn-primary">Spara</button>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>
