@*Byt till ert projektnamn.Models.LogIn*@
@model Frisk_2._0.Models.LogIn

<!DOCTYPE html>
<html lang="se">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Logga in</title>

    <link rel="stylesheet" href="./css/site.css" />
    <link rel="stylesheet" href="./css/member.css" />
    <style>
        .login-failed {
            font-size: small;
            color: red;
        }

        span {
            font-size: small;
        }
        .text-danger {
            color: red;
        }
    </style>
</head>
<body>

    <div class="form-container">
        

        <form asp-action="LogIn" method="post">
            <h3>Logga in</h3>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" placeholder="Ange din email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Lösenord"></label>
                <input asp-for="Lösenord" class="form-control" placeholder="Ange ditt lösenord" required />
                <span asp-validation-for="Lösenord"></span>
            </div>

            <div class="form-group">
                @if (TempData["Message"] != null)
                {
                    <div class="login-failed">@TempData["Message"]</div>
                }
                <input type="submit" name="submit" value="Logga in" class="form-btn">
            </div>

            <p>Har du inget konto? <a asp-action="Index" asp-controller="SignUp">Registrera dig här</a></p>
        </form>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
